{
    "configurations": [
        {
            "name": "Launch via NPM",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.ts",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "type": "node",
            "cwd": "${workspaceFolder}/dist/",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js",
                "!**/node_modules/**"
            ]
        }
    ]
}